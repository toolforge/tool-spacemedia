#image: docker-registry.wikimedia.org/releng/maven-java11:latest
#image: maven:latest
#image: docker-registry.tools.wmflabs.org/toolforge-jdk17-sssd-base

variables:
  MAVEN_CLI_OPTS: "-s .m2/settings.xml --batch-mode"
  MAVEN_OPTS: "-Dmaven.repo.local=.m2/repository"
  #  ZUUL_URL: "gitlab.wikimedia.org"
  #  ZUUL_PROJECT: "toolforge-repos/spacemedia"
  #  ZUUL_REF: "develop-0.4.x"

cache:
  paths:
    - .m2/repository/
    - target/

build:
  stage: build
  script:
    - apt install maven
    - mvn $MAVEN_CLI_OPTS compile

test:
  stage: test
  script:
    - mvn $MAVEN_CLI_OPTS test

deploy:
  stage: deploy
  script:
    - mvn $MAVEN_CLI_OPTS deploy
  only:
    - master
    - develop*

